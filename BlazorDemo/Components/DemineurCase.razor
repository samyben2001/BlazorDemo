@using BlazorDemo.Enums
@if (Case is not null)
{
    <div class=@("d-flex justify-content-center align-items-center " + (!Case.IsActive ? "demineurCase" : (Case.Etat == DemineurEtat.Zero ? "demineurCaseZeroOn" : "demineurCaseOn"))) @onclick="OnSelect">
        @if (Case.IsActive)
        {
            <span>@Case.Etat</span>
        }
    </div>
}